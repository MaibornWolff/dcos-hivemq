
{
  "type": "object",
  "properties": {
    "service": {
      "type": "object",
      "description": "DC/OS service configuration properties",
      "properties": {
        "name": {
          "description": "The name of the service instance",
          "type": "string",
          "default": "hivemq",
          "title": "Service name"
        },
        "user": {
          "description": "The user that the service will run as.",
          "type": "string",
          "default": "root",
          "title": "User"
        },
        "service_account": {
          "description": "The service account for DC/OS service authentication. This is typically left empty to use the default unless service authentication is needed. The value given here is passed as the principal of Mesos framework.",
          "type": "string",
          "default": ""
        },
        "service_account_secret": {
          "description": "Name of the Secret Store credentials to use for DC/OS service authentication. This should be left empty unless service authentication is needed.",
          "type": "string",
          "default": "",
          "title": "Credential secret name (optional)"
        },
        "virtual_network_enabled": {
          "description": "Enable virtual networking",
          "type": "boolean",
          "default": false
        },
        "virtual_network_name": {
          "description": "The name of the virtual network to join",
          "type": "string",
          "default": "dcos"
        },
        "virtual_network_plugin_labels": {
          "description": "Labels to pass to the virtual network plugin. Comma-separated key:value pairs. For example: k_0:v_0,k_1:v_1,...,k_n:v_n",
          "type": "string",
          "default": ""
        },
        "log_level": {
          "description": "The log level for the DC/OS service.",
          "type": "string",
          "enum": [
            "OFF",
            "FATAL",
            "ERROR",
            "WARN",
            "INFO",
            "DEBUG",
            "TRACE",
            "ALL"
          ],
          "default": "INFO"
        }
      },
      "required": [
        "name",
        "user"
      ]
    },
    "node": {
      "description": "hivemq pod configuration properties",
      "type": "object",
      "properties": {
        "slave_count": {
          "title": "Slave Node Count",
          "description": "There will always be two additional master nodes",
          "type": "integer",
          "default": 1,
          "minimum": 0
        },
        "placement_constraint": {
          "title": "Placement constraint",
          "description": "Placement constraints for nodes. Example: [[\"hostname\", \"UNIQUE\"]]",
          "type": "string",
          "default": "[[\"hostname\", \"UNIQUE\"]]",
          "media": {
            "type": "application/x-zone-constraints+json"
          }
        },
        "cpus": {
          "title": "CPU count",
          "description": "HiveMQ pod CPU requirements",
          "type": "number",
          "default": 1
        },
        "mem": {
          "title": "Memory size (MB)",
          "description": "HiveMQ pod mem requirements (in MB)",
          "type": "integer",
          "default": 1024
        },
        "disk": {
          "title": "Disk size (MB)",
          "description": "HiveMQ pod persistent disk requirements (in MB)",
          "type": "integer",
          "default": 50
        },
        "disk_type": {
          "title": "Disk type [ROOT, MOUNT]",
          "description": "Mount volumes require preconfiguration in DC/OS",
          "enum": [
            "ROOT",
            "MOUNT"
          ],
          "default": "ROOT"
        }
      },
      "required": [
        "slave_count",
        "cpus",
        "mem",
        "disk",
        "disk_type"
      ]
	},
    "hivemq": {
      "description": "HiveMQ pod configuration properties",
      "type": "object",
      "properties": {
        "enable_websocket_listener": {
          "description": "Expose a websocket connection",
          "type": "boolean",
          "default": false
        },
        "websocket_port": {
          "description": "Expose the websocket connection on this port",
          "type": "integer",
          "default": 8000
        },
        "enable_tls_listener": {
          "description": "Use transport encryption. You have to provide a keystore and a truststore",
          "type": "boolean",
          "default": false
        },
        "tls_port": {
          "description": "Port for TLS connections",
          "type": "integer",
          "default": 8883
        },
        "allow_wildcard_subscriptions": {
          "description": "Allow Wildcard Subscriptions",
          "type": "boolean",
          "default": false
        },
        "allow_shared_subscriptions": {
          "description": "Allow shared subscriptions",
          "type": "boolean",
          "default": false
        },
        "enable_cluster": {
          "description": "Enable cluster support",
          "type": "boolean",
          "default": true
        },
        "discovery_port": {
          "description": "Port to use for node discovery within the cluster",
          "type": "integer",
          "default": 7800
        },
        "mqtt_port": {
          "description": "Port to use for communication with cluster",
          "type": "integer",
          "default": 1883
        },
        "enable_control_center": {
          "description": "Enable control center",
          "type": "boolean",
          "default": false
        },
        "control_center_port": {
          "description": "Port to expose the control center",
          "type": "integer",
          "default": 8080
        },
        "enable_usage_statistics": {
          "description": "Forward anonymous usage statistics to HiveMQ developers",
          "type": "boolean",
          "default": false
        },
        "license_file": {
          "type": "string",
          "description": "base64 encoded license file",
          "default": ""
        }
      }
    }
  }
}
